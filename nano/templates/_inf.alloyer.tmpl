{{:helper.OMEGAMode()}}
<style>

	*{
		--box-shadow-color: #006;
		--transition-speed: 0.3s;
		opacity: 0.95;
	}
	.block{
		display: block;

		padding: 10px;
		margin: 10px;

		width: 45%;

		border: 2px solid #125;
		border-radius: 8px;

		white-space: pre-line;
		text-align: center;
	}
	.small_size{ 
		width: 10%;
	}
	.omegamat{
		box-shadow: inset 0 0 5px 1px var(--box-shadow-color);
		color: #aaf;
		background: #2d66a6;
		transition: background var(--transition-speed) ease-in-out;
	}
	.omegamat:hover{background: #3d76c6;--box-shadow-color: #009;}
	.emergency{
		background: #a00;
		color: #0f0;
	}
	.code_error_msg{
		display: inline-block;	

		padding: 20px;
		border: solid #f00 1px;
		width: 25%;
		height: 25%;
		text-align: center;
		position: absolute;
		top: 25%;
		left: 30%;
	}
	.center{
		margin: 10px auto;
		clear: both;
	}
	.right{
		margin: 10px 0 0 auto;
		float: right;
		clear: right;
	}

	.left{
		margin: 10px 0;
		float: left;
		clear: left;
	}
	.blc{
		white-space: pre-line;
		display: block;
		border-radius: 8px;
		padding: 5px 10px;
	}
</style>
{{if data.ui_window != "reboot"}}
	{{if data.ui_window != "main_menu"}}
		{{:helper.link("Back", null, {"window" : "main_menu"}, null, "left")}}
	{{/if}}
	{{:helper.link("EMERGENCY SHUTDOWN", null, {"emergency_shutdown" : 1}, null, "right emergency")}}
{{/if}}
<br><br>


{{if data.ui_window == "main_menu"}}
	<div class="omegamat block left"><h3>Material</h3><hr>{{:data.ui_win_preview.first_metal}}{{:helper.link("View Info", null, {"window" : "first_metal"})}}</div>
	<div class="omegamat block right"><h3>Material</h3><hr>{{:data.ui_win_preview.second_metal}}{{:helper.link("View Info", null, {"window" : "second_metal"})}}</div><br><br><br>
	<div class="omegamat block left"><h3>Alloing Shemes</h3><hr>{{:helper.link('View', null, {"window" : "alloing_schemes"})}}</div>
	<div class="omegamat block right"><h3>Additives</h3><hr>{{:data.ui_win_data.additives}}{{:helper.link('View', null, {"window" : "additives"})}}</div><hr>
	{{:helper.link('Alloy', null, {"window" : "approximate_result"})}}

{{else data.ui_window == "first_metal"}}
	{{:data.ui_win_data.first_metal}}

{{else data.ui_window == "second_metal"}}
	{{:data.ui_win_data.second_metal}}

{{else data.ui_window == "alloing_schemes"}}
	alloing_schemes

{{else data.ui_window == "additives"}}
	additives

{{else data.ui_window == "approximate_result"}}
	approximate_result

{{else data.ui_window == "reboot"}}
	{{:helper.link("REBOT", null, {"bootmeup" : 1}, null, "left")}} <!-- wake me up inside -->
{{else}}
	<div class="code_error_msg block emergency">TEMPLATE ERROR</div>
{{/if}}
